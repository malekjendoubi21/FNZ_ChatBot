@model KnowledgeBase
@{
    ViewData["Title"] = "Détails de la question";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4>Détails de la question</h4>
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactive</span>
                }
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-3">
                        <strong>Question :</strong>
                    </div>
                    <div class="col-md-9">
                        <p class="mb-0">@Model.Question</p>
                    </div>
                </div>
                
                <div class="row mb-4">
                    <div class="col-md-3">
                        <strong>Réponse :</strong>
                    </div>
                    <div class="col-md-9">
                        <p class="mb-0" style="white-space: pre-line;">@Model.Response</p>
                    </div>
                </div>
                
                <hr />
                
                <div class="row mb-2">
                    <div class="col-md-6">
                        <small class="text-muted">
                            <strong>Créé le :</strong> @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                        </small>
                    </div>
                    <div class="col-md-6">
                        <small class="text-muted">
                            <strong>Modifié le :</strong> @Model.ModifiedDate.ToString("dd/MM/yyyy HH:mm")
                        </small>
                    </div>
                </div>
                
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour à la liste
                    </a>
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                    <form asp-action="ToggleActive" asp-route-id="@Model.Id" method="post" class="d-inline">
                        @if (Model.IsActive)
                        {
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-eye-slash"></i> Désactiver
                            </button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-eye"></i> Activer
                            </button>
                        }
                    </form>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger" 
                                onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette question ?')">
                            <i class="fas fa-trash"></i> Supprimer
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>