@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Réinitialiser le mot de passe";
}

<div class="reset-password-page">
    <div class="container-fluid py-5">
        <div class="row justify-content-center min-vh-75 align-items-center">
            <div class="col-lg-6 col-md-8">
                <!-- Carte de réinitialisation -->
                <div class="card border-0 shadow-lg animate__animated animate__fadeInUp">
                    <div class="card-header bg-gradient text-white p-4 text-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <div class="mb-3">
                            <i class="fas fa-lock-open fa-3x text-white"></i>
                        </div>
                        <h3 class="mb-1 fw-bold">Réinitialiser le Mot de Passe</h3>
                        <p class="mb-0 opacity-75">Créez votre nouveau mot de passe sécurisé</p>
                    </div>
                    
                    <div class="card-body p-5">
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success border-0 mb-4 animate__animated animate__fadeInUp">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-check-circle fa-lg me-3"></i>
                                    <div>
                                        @TempData["Success"]
                                    </div>
                                </div>
                            </div>
                        }
                        
                        <!-- Instructions -->
                        <div class="alert alert-info border-0 mb-4 animate__animated animate__fadeInUp" style="animation-delay: 0.1s;">
                            <div class="d-flex align-items-start">
                                <i class="fas fa-info-circle fa-2x me-3 text-info"></i>
                                <div>
                                    <h6 class="alert-heading">
                                        <i class="fas fa-clipboard-list me-2"></i>Instructions
                                    </h6>
                                    <ul class="mb-0">
                                        <li>Vérifiez votre email pour le code de vérification à 6 chiffres</li>
                                        <li>Le code expire dans 15 minutes après l'envoi</li>
                                        <li>Créez un mot de passe fort avec au moins 6 caractères</li>
                                        <li>Utilisez un mélange de lettres, chiffres et symboles</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        
                        <form asp-action="ResetPassword" method="post" class="needs-validation" novalidate>
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 mb-4"></div>
                            
                            <!-- Champ Email -->
                            <div class="form-floating mb-3 animate__animated animate__fadeInUp" style="animation-delay: 0.2s;">
                                <input asp-for="Email" class="form-control" placeholder="Email" type="email" required />
                                <label asp-for="Email" class="form-label">
                                    <i class="fas fa-envelope me-2"></i>Adresse email
                                </label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    L'email où vous avez reçu le code de vérification
                                </div>
                            </div>
                            
                            <!-- Code de vérification -->
                            <div class="form-floating mb-3 animate__animated animate__fadeInUp" style="animation-delay: 0.3s;">
                                <input asp-for="VerificationCode" class="form-control text-center" placeholder="000000" 
                                       maxlength="6" style="font-size: 1.5rem; letter-spacing: 0.5rem; font-family: monospace;" required />
                                <label asp-for="VerificationCode" class="form-label">
                                    <i class="fas fa-shield-alt me-2"></i>Code de vérification
                                </label>
                                <span asp-validation-for="VerificationCode" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="fas fa-clock me-1"></i>
                                    Code à 6 chiffres reçu par email (valide 15 minutes)
                                </div>
                            </div>
                            
                            <!-- Nouveau mot de passe -->
                            <div class="form-floating mb-3 animate__animated animate__fadeInUp" style="animation-delay: 0.4s;">
                                <input asp-for="NewPassword" class="form-control" placeholder="Nouveau mot de passe" type="password" required />
                                <label asp-for="NewPassword" class="form-label">
                                    <i class="fas fa-key me-2"></i>Nouveau mot de passe
                                </label>
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Minimum 6 caractères, incluez des lettres, chiffres et symboles
                                </div>
                                <div id="password-strength-indicator" class="mt-2"></div>
                            </div>
                            
                            <!-- Confirmation mot de passe -->
                            <div class="form-floating mb-4 animate__animated animate__fadeInUp" style="animation-delay: 0.5s;">
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirmer le mot de passe" type="password" required />
                                <label asp-for="ConfirmPassword" class="form-label">
                                    <i class="fas fa-check-double me-2"></i>Confirmer le mot de passe
                                </label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            
                            <!-- Conseils de sécurité -->
                            <div class="card mb-4 animate__animated animate__fadeInUp" style="animation-delay: 0.6s;">
                                <div class="card-body p-4" style="background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(5, 150, 105, 0.1));">
                                    <h6 class="card-title text-success">
                                        <i class="fas fa-shield-check me-2"></i>Conseils pour un mot de passe sécurisé
                                    </h6>
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <div class="d-flex align-items-center text-success">
                                                <i class="fas fa-check-circle me-2"></i>
                                                <span>Au moins 8 caractères</span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="d-flex align-items-center text-success">
                                                <i class="fas fa-check-circle me-2"></i>
                                                <span>Majuscules et minuscules</span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="d-flex align-items-center text-success">
                                                <i class="fas fa-check-circle me-2"></i>
                                                <span>Chiffres et symboles</span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="d-flex align-items-center text-success">
                                                <i class="fas fa-check-circle me-2"></i>
                                                <span>Éviter les mots communs</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Boutons d'action -->
                            <div class="d-grid gap-2 animate__animated animate__fadeInUp" style="animation-delay: 0.7s;">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-save me-2"></i>Réinitialiser le mot de passe
                                </button>
                                <a href="@Url.Action("ForgotPassword")" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Renvoyer un code
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
                
                <!-- Aide et support -->
                <div class="row mt-4">
                    <div class="col-md-6 animate__animated animate__fadeInUp" style="animation-delay: 0.8s;">
                        <div class="card border-0 bg-light h-100">
                            <div class="card-body p-3 text-center">
                                <h6 class="text-muted mb-2">
                                    <i class="fas fa-clock me-2"></i>Code expiré ?
                                </h6>
                                <p class="mb-0 text-muted small">
                                    Les codes expirent après 15 minutes.<br>
                                    <a href="@Url.Action("ForgotPassword")" class="text-primary">Demander un nouveau code</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6 animate__animated animate__fadeInUp" style="animation-delay: 0.9s;">
                        <div class="card border-0 bg-light h-100">
                            <div class="card-body p-3 text-center">
                                <h6 class="text-muted mb-2">
                                    <i class="fas fa-life-ring me-2"></i>Besoin d'aide ?
                                </h6>
                                <p class="mb-0 text-muted small">
                                    Contactez notre équipe support :<br>
                                    <a href="mailto:admin@fnz.tn" class="text-primary">admin@fnz.tn</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Footer de la page -->
                <div class="text-center mt-4 animate__animated animate__fadeInUp" style="animation-delay: 1s;">
                    <p class="text-muted mb-0">
                        <i class="fas fa-lock me-2"></i>
                        Processus sécurisé - Vos données sont chiffrées
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Validation du formulaire
            const form = document.querySelector('.needs-validation');
            if (form) {
                form.addEventListener('submit', function(event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                });
            }
            
            // Indicateur de force du mot de passe
            const newPasswordField = document.querySelector('#NewPassword');
            const confirmPasswordField = document.querySelector('#ConfirmPassword');
            const verificationCodeField = document.querySelector('#VerificationCode');
            const strengthIndicator = document.getElementById('password-strength-indicator');
            
            if (newPasswordField && strengthIndicator) {
                newPasswordField.addEventListener('input', function() {
                    const password = this.value;
                    const strength = calculatePasswordStrength(password);
                    updatePasswordStrengthIndicator(strength, password.length);
                });
            }
            
            // Vérification en temps réel de la confirmation
            if (confirmPasswordField && newPasswordField) {
                confirmPasswordField.addEventListener('input', function() {
                    const password = newPasswordField.value;
                    const confirm = this.value;
                    
                    this.classList.remove('is-valid', 'is-invalid');
                    if (confirm.length > 0) {
                        if (password === confirm) {
                            this.classList.add('is-valid');
                        } else {
                            this.classList.add('is-invalid');
                        }
                    }
                });
            }
            
            // Formatage automatique du code de vérification
            if (verificationCodeField) {
                verificationCodeField.addEventListener('input', function() {
                    // Autoriser seulement les chiffres
                    this.value = this.value.replace(/[^0-9]/g, '').substring(0, 6);
                });
            }
            
            function calculatePasswordStrength(password) {
                let score = 0;
                const checks = [
                    password.length >= 8,
                    /[a-z]/.test(password),
                    /[A-Z]/.test(password),
                    /\d/.test(password),
                    /[^a-zA-Z\d]/.test(password)
                ];
                
                checks.forEach(check => {
                    if (check) score++;
                });
                
                return score;
            }
            
            function updatePasswordStrengthIndicator(strength, length) {
                if (!strengthIndicator) return;
                
                const levels = [
                    { class: 'text-danger', text: 'Très faible', width: '20%' },
                    { class: 'text-warning', text: 'Faible', width: '40%' },
                    { class: 'text-info', text: 'Moyen', width: '60%' },
                    { class: 'text-primary', text: 'Fort', width: '80%' },
                    { class: 'text-success', text: 'Très fort', width: '100%' }
                ];
                
                const level = levels[Math.min(strength, 4)] || levels[0];
                
                strengthIndicator.innerHTML = `
                    <div class="password-strength-bar mb-1">
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar ${level.class.replace('text-', 'bg-')}" 
                                 style="width: ${length > 0 ? level.width : '0%'}; transition: width 0.3s ease;">
                            </div>
                        </div>
                    </div>
                    <small class="${level.class} fw-semibold">
                        ${length > 0 ? level.text : ''}
                    </small>
                `;
            }
        });
    </script>
}