@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const adminSwitch = document.getElementById('adminSwitch');
            const adminDescription = document.getElementById('adminDescription');
            const userDescription = document.getElementById('userDescription');
            
            // Function to toggle descriptions
            function toggleDescriptions() {
                if (adminSwitch.checked) {
                    adminDescription.style.display = 'block';
                    userDescription.style.display = 'none';
                    adminDescription.classList.add('animate__animated', 'animate__fadeIn');
                } else {
                    adminDescription.style.display = 'none';
                    userDescription.style.display = 'block';
                    userDescription.classList.add('animate__animated', 'animate__fadeIn');
                }
            }
            
            // Initial state
            toggleDescriptions();
            
            // Event listener
            adminSwitch.addEventListener('change', toggleDescriptions);
            
            // Form validation
            const form = document.querySelector('.needs-validation');
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            });
            
            // Animation cleanup
            document.addEventListener('animationend', function(e) {
                e.target.classList.remove('animate__animated', 'animate__fadeIn');
            });
        });
    </script>
}